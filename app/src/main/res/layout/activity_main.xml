<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wbdata"
    android:padding="16dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttonPaese"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wb1" />

    <Button
        android:id="@+id/buttonPaese"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="0dp"
        android:text="SELECT COUNTRY"
        android:textColor="#2D2D2D"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_normal"
        android:drawableLeft="@drawable/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.800" />

    <Button
        android:id="@+id/buttonArgomento"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonPaese"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_normal"
        android:drawableLeft="@drawable/ic_launcher"
        android:padding="0dp"
        android:text="SELECT TOPICS"
        android:textColor="#2D2D2D"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPaese" />

    <Button
        android:id="@+id/buttonGrafico"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonPaese"
        android:layout_marginTop="10dp"
        android:text="LOAD PREVIOUS IMAGE"
        android:textColor="#2D2D2D"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:drawableLeft="@drawable/graphic"
        android:background="@drawable/background_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonArgomento" />

    <Button
        android:id="@+id/buttonDatabase"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/buttonPaese"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_normal"
        android:padding="0dp"
        android:text="LOADING DATA OFFLINE"
        android:textColor="#2D2D2D"
        android:textSize="25dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/storage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGrafico" />


</android.support.constraint.ConstraintLayout>